<Menu>:
    BoxLayout:
        BoxLayout:
            orientation: "vertical"
            size_hint_x:0.3

            Label:
                text: "大学生リマインダー"
                size_hint_y:0.5
            Button:
                text: "出席"
                size_hint_y:0.2
                on_press:
                    sm.current = 'attendance'
            Button:
                text: "課題一覧"
                size_hint_y:0.2
                on_press:
                    sm.current = 'task_management'
            Button:
                text: "カレンダー"
                size_hint_y:0.2
                on_press:
                    sm.current = 'task_view'

            Button:
                text: "履修講義情報"
                size_hint_y:0.2
                on_press:
                    sm.current = 'lecture_manager'

            Button:
                text: "見込み評価"
                size_hint_y:0.2
                on_press:
                    sm.current = 'assessment'
            Label:
                text: ""
                size_hint_y:1

        ScreenManager:
            id: sm
            AttendanceScreen:
            TaskManagementScreen:
            TaskViewScreen:
            LectureManagerScreen:
            AssessmentScreen:

<AttendanceScreen>:
    name: 'attendance'
