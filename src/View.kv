<Menu>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 255/255,228/255,225/255,0.7
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 250/255,235/255,215/255,0.3
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: "vertical"
            size_hint_x:0.3
            Label:
                text: "大学生リマインダー"
                color: 0, 0, 0, 1
                font_size: '50'
                size_hint_y:2
            Button:
                text: "出席"
                font_size: '50'
                size_hint_y:0.2
                on_press:
                    sm.current = 'attendance'
            Button:
                text: "課題一覧"
                font_size: '50'
                size_hint_y:0.2
                on_press:
                    sm.current = 'task_management'
            Button:
                text: "カレンダー"
                font_size: '50'
                size_hint_y:0.2
                on_press:
                    sm.current = 'task_view'

            Button:
                text: "履修講義情報"
                font_size: '50'
                size_hint_y:0.2
                on_press:
                    sm.current = 'lecture_manager'

            Button:
                text: "見込み評価"
                font_size: '50'
                size_hint_y:0.2
                on_press:
                    sm.current = 'assessment'

            Label:
                text: ""
                size_hint_y:1

        ScreenManager:
            id: sm
            AttendanceScreen:
            TaskManagementScreen:
            TaskViewScreen:
            LectureManagerScreen:
            AssessmentScreen:


